<Window x:Class="KabanovExam.AddEditPartner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:KabanovExam"
        Title="Добавить/Редактировать партнера" Height="450" Width="600">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Наименование"/>
            <TextBox x:Name="NaimenovaniePartnera" Margin="0,5"/>

            <TextBlock Text="Тип партнёра"/>
            <ComboBox x:Name="PartnerTypeComboBox" Margin="0,5"/>

            <TextBlock Text="Рейтинг"/>
            <TextBox x:Name="Reyting" Margin="0,5" PreviewTextInput="NumberOnly_PreviewTextInput"/>

            <TextBlock Text="Фамилия директора"/>
            <TextBox x:Name="Familiya" Margin="0,5"/>

            <TextBlock Text="Имя директора"/>
            <TextBox x:Name="Imya" Margin="0,5"/>

            <TextBlock Text="Отчество директора"/>
            <TextBox x:Name="Otchestvo" Margin="0,5"/>

            <TextBlock Text="Телефон"/>
            <TextBox x:Name="Telephone" Margin="0,5"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="Email" Margin="0,5"/>

            <TextBlock Text="Индекс"/>
            <TextBox x:Name="Index" Margin="0,5"/>

            <TextBlock Text="Область"/>
            <TextBox x:Name="Oblast" Margin="0,5"/>

            <TextBlock Text="Город"/>
            <TextBox x:Name="Gorod" Margin="0,5"/>

            <TextBlock Text="Улица"/>
            <TextBox x:Name="Ulica" Margin="0,5"/>

            <TextBlock Text="Дом"/>
            <TextBox x:Name="Dom" Margin="0,5"/>

            <TextBlock Text="ИНН"/>
            <TextBox x:Name="INN" Margin="0,5"/>

            <Button x:Name="SaveButton" Content="Сохранить" Margin="0,10" Click="SaveButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
